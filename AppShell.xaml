<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiBench.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiBench"
    xmlns:pages="clr-namespace:MauiBench.Pages"
    FlyoutBehavior="Disabled"
    Title="MauiBench">

    <TabBar>
        <Tab x:Name="BenchmarkPage" Title="Benchmarks" Icon="speedom.png">
            <ShellContent Title="Benchmarks" ContentTemplate="{DataTemplate pages:BenchmarkPage}" Icon="speedom.png" />
        </Tab>
        <Tab x:Name="ResultsPage" Title="Results" Icon="results.png">
            <ShellContent Title="Results" ContentTemplate="{DataTemplate pages:ResultsPage}" Icon="results.png" />
        </Tab>
        <Tab x:Name="SystemInfo" Title="System Info" Icon="info.png">
            <ShellContent Title="System Info" ContentTemplate="{DataTemplate pages:SystemInfo}" Icon="info.png" />
        </Tab>
    </TabBar>
</Shell>
